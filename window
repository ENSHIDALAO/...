        Gray = {
            ["50"] = Color3.fromHex("#F2F2F7"),
            ["100"] = Color3.fromHex("#E5E5EA"),
            ["200"] = Color3.fromHex("#D1D1D6"),
            ["300"] = Color3.fromHex("#C7C7CC"),
