    },
    
    Radius = {
        None = 0,
        SM = 4,
        MD = 8,
        LG = 12,
        XL = 16,
        Full = 999
    },
    
    Shadows = {
        Low = {
            Transparency = 0.8,
            Size = UDim2.new(1, 6, 1, 6),
            Position = UDim2.new(0, 3, 0, 3)
        },
        Medium = {
            Transparency = 0.7,
            Size = UDim2.new(1, 10, 1, 10),
            Position = UDim2.new(0, 5, 0, 5)
        },
        High = {
            Transparency = 0.6,
            Size = UDim2.new(1, 16, 1, 16),
            Position = UDim2.new(0, 8, 0, 8)
        }
    }
}

-- 图标系统（使用同样的图标库）
local Icons = {}
do
    local iconData = game:HttpGet("https://raw.githubusercontent.com/Footagesus/Icons/main/Main-v2.lua")
    local iconLib = loadstring(iconData)()
    iconLib.SetIconsType("lucide")
    
    function Icons.Get(iconName, size)
        return iconLib.Icon2(iconName, nil, size ~= false)
    end
    
    function Icons.Image(iconName, color, size)
        local iconData = Icons.Get(iconName)
        if not iconData then return nil end
        
        local imageLabel = Instance.new("ImageLabel")
        imageLabel.Image = iconData[1]
        imageLabel.ImageRectSize = iconData[2].ImageRectSize
        imageLabel.ImageRectOffset = iconData[2].ImageRectPosition
        imageLabel.BackgroundTransparency = 1
        imageLabel.Size = size or UDim2.new(0, 20, 0, 20)
        imageLabel.ImageColor3 = color or DesignSystem.Colors.Gray["600"]
        
        return imageLabel
    end
end

-- 工具函数
local Utils = {}
do
    function Utils.Tween(object, properties, duration, easingStyle, easingDirection)
        easingStyle = easingStyle or Enum.EasingStyle.Quad
        easingDirection = easingDirection or Enum.EasingDirection.Out
        duration = duration or 0.2
        
        local tweenInfo = TweenInfo.new(duration, easingStyle, easingDirection)
        local tween = Services.TweenService:Create(object, tweenInfo, properties)
        tween:Play()
        return tween
    end
    
    function Utils.Create(class, properties, children)
        local instance = Instance.new(class)
        
        for prop, value in pairs(properties or {}) do
            if prop ~= "ThemeTag" then
                instance[prop] = value
            end
        end
        
        if children then
            for _, child in ipairs(children) do
                child.Parent = instance
            end
        end
        
        return instance
    end
    
    function Utils.RoundFrame(radius, properties, children)
        local frame = Utils.Create("Frame", {
            BackgroundTransparency = 1,
            Size = UDim2.new(1, 0, 1, 0)
        }, {
            Utils.Create("UICorner", {
                CornerRadius = UDim.new(0, radius)
            })
        })
        
        for prop, value in pairs(properties or {}) do
            if prop ~= "ThemeTag" then
                frame[prop] = value
            end
        end
        
        if children then
            for _, child in ipairs(children) do
                child.Parent = frame
            end
        end
        
        return frame
    end
    
    function Utils.AddSignal(connection, callback)
        local signal = connection:Connect(callback)
        return signal
    end
end

